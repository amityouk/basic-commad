https://bestmonitoringtools.com/how-to-install-zabbix-server-on-centos-or-rhel/

sudo mysql -uroot -p'root@123' -e "create database zabbix character set utf8mb4 collate utf8mb4_bin;"
sudo mysql -uroot -p'root@123' -e "create user 'zabbix'@'localhost' identified by 'root@1234';"
sudo mysql -uroot -p'root@123' -e "grant all privileges on zabbix.* to zabbix@localhost identified by 'root@1234';"

GRANT ALL PRIVILEGES ON *.* TO 'zabbix'@'%' IDENTIFIED BY "root@1234";

sudo zcat /usr/share/zabbix-sql-scripts/mysql/server.sql.gz | mysql --default-character-set=utf8mb4 -uzabbix -p'root@1234' zabbix
